{
  "name": "@mini-architecture/home",
  "version": "0.0.4-beta2",
  "description": "",
  "scripts": {
    "postinstall": "yarn build",
    "build": "lerna run build --parallel --ignore @mini-architecture/cli && lerna run build --scope @mini-architecture/cli",
    "release": "yarn build && lerna version --conventional-commits --no-push",
    "releasea": "yarn lerna publish from-git",
    "dev:pack": "lerna run dev --parallel --scope @mini-architecture/framework --scope @mini-architecture/pack",
    "dev:dt:client": "lerna run client --scope @mini-architecture/devtools --stream",
    "dev:dt:launch": "lerna run launch --scope @mini-architecture/devtools --stream",
    "lint": "eslint && prettier --write"
  },
  "author": "lawler61",
  "license": "ISC",
  "files": [],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lawler61/mini-architecture.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-publish": "yarn aa"
    }
  },
  "lint-staged": {
    "packages/cli/src/**/*.ts": [
      "yarn lint"
    ],
    "packages/devtools/**/*.{js,ts,tsx}": [
      "yarn lint"
    ],
    "packages/framework/**/*.{js,ts}": [
      "yarn lint"
    ],
    "packages/mini/**/*.js": [
      "yarn lint"
    ],
    "packages/pack/src/*.ts": [
      "yarn lint"
    ],
    "*.{css,html,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@types/express": "^4.17.8",
    "@types/node": "^14.14.6",
    "@types/nodemon": "^1.19.0",
    "@types/parcel-bundler": "^1.12.1",
    "@types/react-modal": "^3.10.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-preset-minify": "^0.5.1",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
