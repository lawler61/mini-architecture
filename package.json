{
  "name": "mini-architecture",
  "version": "0.0.5",
  "description": "",
  "scripts": {
    "postinstall": "yarn build",
    "build": "lerna run build --include-dependencies --stream",
    "dev:pack": "lerna run dev --parallel --scope @mini-architecture/framework --scope @mini-architecture/pack --stream",
    "dev:dt:client": "lerna run client --scope @mini-architecture/devtools --stream",
    "dev:dt:launch": "lerna run launch --scope @mini-architecture/devtools --stream",
    "dev:cli": "lerna run dev --scope @mini-architecture/cli --stream",
    "release": "lerna version --conventional-commits --no-push --preid beta --conventional-prerelease",
    "dump": "lerna publish from-git",
    "lint": "lerna run lint --parallel && eslint && prettier --write ."
  },
  "author": "lawler61",
  "license": "ISC",
  "files": [],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lawler61/mini-architecture.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-publish": "yarn build"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,ts,jsx,tsx}": [
      "yarn lint"
    ],
    "*.{css,html,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@types/express": "^4.17.8",
    "@types/node": "^14.14.6",
    "@types/parcel-bundler": "^1.12.1",
    "@types/react-modal": "^3.10.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "signal-exit": "^3.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
