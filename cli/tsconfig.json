{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}
