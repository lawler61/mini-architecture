{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    /* tsconfig.paths check only */
    "paths": {
      "@/*": [
        "./*"
      ],
      "@comp/*": [
        "./client/components/*"
      ],
      "comp/*": [
        "./client/components/*"
      ]
    },
    "noEmit": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "client",
    "native",
    "server",
    "typings"
  ],
  "exclude": [
    "node_modules"
  ]
}
