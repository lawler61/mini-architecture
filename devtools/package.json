  "scripts": {
    "pack:mini": "rm -rf dev/mini && ../cli/bin/index.js pack -e @mini -m dev -p devtools -o dev/mini",
    "dev:client": "yarn pack:mini && rm -rf dev/client && scripts/client.ts",
